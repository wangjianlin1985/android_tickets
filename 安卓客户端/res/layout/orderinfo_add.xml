<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F5F5F5"
    android:orientation="vertical" >

<include layout="@layout/title" />

<ScrollView
 android:layout_width="fill_parent" 
 android:layout_height="wrap_content">
<LinearLayout 
	android:orientation="vertical" 
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:background="@android:color/white">
	<TableLayout
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	android:stretchColumns="1">
		<TableRow android:layout_marginTop="5dp">
			<TextView 
				android:text="用户：" 
				android:id="@+id/TV_userObj"
				android:layout_width="0dp" 
				android:layout_height="wrap_content"
				android:layout_weight="1.5"
				android:textColor="@color/hint_color" />
			<Spinner 
				android:id="@+id/Spinner_userObj" 
				android:layout_width="0dp" 
				android:layout_height="wrap_content"
				android:layout_weight="4"
				android:layout_marginRight="5dp"/>
		</TableRow>

		<TableRow android:layout_marginTop="5dp">
			<TextView 
				android:text="车次信息：" 
				android:id="@+id/TV_trainObj"
				android:layout_width="0dp" 
				android:layout_height="wrap_content"
				android:layout_weight="1.5"
				android:textColor="@color/hint_color" />
			<Spinner 
				android:id="@+id/Spinner_trainObj" 
				android:layout_width="0dp" 
				android:layout_height="wrap_content"
				android:layout_weight="4"
				android:layout_marginRight="5dp"/>
		</TableRow>

		<TableRow android:layout_marginTop="5dp">
			<TextView 
				android:text="车次：" 
				android:id="@+id/TV_trainNumber"
				android:layout_width="0dp" 
				android:layout_height="wrap_content"
				android:layout_weight="1.5"
				android:textColor="@color/hint_color" />
			<EditText 
				android:text="" 
				android:id="@+id/ET_trainNumber" 
				android:layout_width="0dp"
				android:layout_height="40dp"
				android:layout_weight="4"
				android:layout_marginTop="5dip"
				android:background="@drawable/btn_item_medium_default"
				android:drawableLeft="@drawable/ic_user_pwd"
				android:drawablePadding="10dp"
				android:gravity="center_vertical"
				android:paddingLeft="4dp"
				android:layout_marginRight="5dp"
				android:singleLine="true" />
		</TableRow>

		<TableRow android:layout_marginTop="5dp">
			<TextView 
				android:text="始发站：" 
				android:id="@+id/TV_startStation"
				android:layout_width="0dp" 
				android:layout_height="wrap_content"
				android:layout_weight="1.5"
				android:textColor="@color/hint_color" />
			<Spinner 
				android:id="@+id/Spinner_startStation" 
				android:layout_width="0dp" 
				android:layout_height="wrap_content"
				android:layout_weight="4"
				android:layout_marginRight="5dp"/>
		</TableRow>

		<TableRow android:layout_marginTop="5dp">
			<TextView 
				android:text="终到站：" 
				android:id="@+id/TV_endStation"
				android:layout_width="0dp" 
				android:layout_height="wrap_content"
				android:layout_weight="1.5"
				android:textColor="@color/hint_color" />
			<Spinner 
				android:id="@+id/Spinner_endStation" 
				android:layout_width="0dp" 
				android:layout_height="wrap_content"
				android:layout_weight="4"
				android:layout_marginRight="5dp"/>
		</TableRow>

		<TableRow android:layout_marginTop="5dp">
			<TextView 
				android:text="开车日期：" 
				android:id="@+id/TV_startDate"
				android:layout_width="0dp" 
				android:layout_height="wrap_content"
				android:layout_weight="1.5"
				android:textColor="@color/hint_color" />
			<DatePicker 
				android:id="@+id/dp_startDate"
				android:layout_width="0dp"
				android:layout_height="wrap_content" 
				android:layout_weight="4" />
		</TableRow>

		<TableRow android:layout_marginTop="5dp">
			<TextView 
				android:text="席别：" 
				android:id="@+id/TV_seatType"
				android:layout_width="0dp" 
				android:layout_height="wrap_content"
				android:layout_weight="1.5"
				android:textColor="@color/hint_color" />
			<Spinner 
				android:id="@+id/Spinner_seatType" 
				android:layout_width="0dp" 
				android:layout_height="wrap_content"
				android:layout_weight="4"
				android:layout_marginRight="5dp"/>
		</TableRow>

		<TableRow android:layout_marginTop="5dp">
			<TextView 
				android:text="座位信息：" 
				android:id="@+id/TV_seatInfo"
				android:layout_width="0dp" 
				android:layout_height="wrap_content"
				android:layout_weight="1.5"
				android:textColor="@color/hint_color" />
			<EditText 
				android:text="" 
				android:id="@+id/ET_seatInfo" 
				android:layout_width="0dp"
				android:layout_height="40dp"
				android:layout_weight="4"
				android:layout_marginTop="5dip"
				android:background="@drawable/btn_item_medium_default"
				android:drawableLeft="@drawable/ic_user_pwd"
				android:drawablePadding="10dp"
				android:gravity="center_vertical"
				android:paddingLeft="4dp"
				android:layout_marginRight="5dp"
				android:singleLine="true" />
		</TableRow>

		<TableRow android:layout_marginTop="5dp">
			<TextView 
				android:text="总票价：" 
				android:id="@+id/TV_totalPrice"
				android:layout_width="0dp" 
				android:layout_height="wrap_content"
				android:layout_weight="1.5"
				android:textColor="@color/hint_color" />
			<EditText
				android:text=""
				android:id="@+id/ET_totalPrice"
				android:inputType="numberDecimal" 
				android:layout_width="0dp" 
				android:layout_height="40dp"
				android:layout_weight="4"
				android:layout_marginTop="5dip"
				android:background="@drawable/btn_item_medium_default"
				android:drawableLeft="@drawable/ic_user_pwd"
				android:drawablePadding="10dp"
				android:ellipsize="end"
				android:gravity="center_vertical"
				android:paddingLeft="4dp"
				android:layout_marginRight="5dp" />
		</TableRow>

		<TableRow android:layout_marginTop="5dp">
			<TextView 
				android:text="开车时间：" 
				android:id="@+id/TV_startTime"
				android:layout_width="0dp" 
				android:layout_height="wrap_content"
				android:layout_weight="1.5"
				android:textColor="@color/hint_color" />
			<EditText 
				android:text="" 
				android:id="@+id/ET_startTime" 
				android:layout_width="0dp"
				android:layout_height="40dp"
				android:layout_weight="4"
				android:layout_marginTop="5dip"
				android:background="@drawable/btn_item_medium_default"
				android:drawableLeft="@drawable/ic_user_pwd"
				android:drawablePadding="10dp"
				android:gravity="center_vertical"
				android:paddingLeft="4dp"
				android:layout_marginRight="5dp"
				android:singleLine="true" />
		</TableRow>

		<TableRow android:layout_marginTop="5dp">
			<TextView 
				android:text="终到时间：" 
				android:id="@+id/TV_endTime"
				android:layout_width="0dp" 
				android:layout_height="wrap_content"
				android:layout_weight="1.5"
				android:textColor="@color/hint_color" />
			<EditText 
				android:text="" 
				android:id="@+id/ET_endTime" 
				android:layout_width="0dp"
				android:layout_height="40dp"
				android:layout_weight="4"
				android:layout_marginTop="5dip"
				android:background="@drawable/btn_item_medium_default"
				android:drawableLeft="@drawable/ic_user_pwd"
				android:drawablePadding="10dp"
				android:gravity="center_vertical"
				android:paddingLeft="4dp"
				android:layout_marginRight="5dp"
				android:singleLine="true" />
		</TableRow>

	</TableLayout>
	<LinearLayout 
		android:orientation="vertical" 
		android:layout_width="fill_parent"
		android:layout_height="80dp" 
		android:gravity="center">
		   <Button 
				android:text="添加" 
				android:id="@+id/BtnAdd"
 				android:layout_width="match_parent"
				android:layout_height="48dp"
				android:layout_marginLeft="5dip"
				android:layout_marginRight="5dip"
				android:layout_marginTop="5dip"
				android:background="#D64F4D"
				android:textColor="@color/white" /> 
	</LinearLayout> 
  </LinearLayout>
</ScrollView>
</LinearLayout>

